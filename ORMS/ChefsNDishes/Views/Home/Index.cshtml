@{
    ViewData["Title"] = "Home Page";
}

@model Chef

<div>
    <h3>Check out our roster of Chefs!</h3>
    <a href="/addChef">Add Chef</a>
    <table class="table table-striped">
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th># of Dishes</th>
        </tr>
            @{
                foreach(Chef c in ViewBag.AllChefs){
                    <tr>
                    <td>@c.FirstName</td>
                    <td>@(DateTime.Now.Year - c.DOB.Year)</td>
                    <td>@c.Dish.Count</td>
                    </tr>
                }
            }
    </table>
</div>